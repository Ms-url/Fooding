<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/marg"
    android:layout_marginRight="@dimen/marg"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/textSize_12"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/orange_s"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/level_one_card_store_name"
                    android:textSize="@dimen/textSize_16_1"
                    android:gravity="center"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/level_one_card_whether_click"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <com.example.fooding.unit.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>